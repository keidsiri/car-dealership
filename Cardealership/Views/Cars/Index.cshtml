@using Dealership.Models;


<h1>Cars list</h1>
@if (Model.Count == 0)
{
  <p>There are no cars in the list.</p>
}
<ul>
  @foreach (Car item in Model)
  {
    <li>@item.MakeModel</li>
    <li>@item.Price</li>
    <li>@item.Miles</li>
  }
</ul>

<a href="/cars/new">Add a new item.</a>

<form action="/cars/delete" method="post">
  <button type="submit" name="button">Clear All Items</button>
</form>

